<!doctype html>
<html>

<head>
    <title>BuildMecar</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script>

        $(function () {
            var isTouchDevice = "ontouchstart" in document.documentElement ? true : false;
            var BUTTON_DOWN = isTouchDevice ? "touchstart" : "mousedown";
            var BUTTON_UP = isTouchDevice ? "touchend" : "mouseup";
            var isCameraStreaming = false;

            // Motor control buttons
            $("button.motor-btn").bind(BUTTON_DOWN, function () {
                $.post("/cmd", { id: this.id, status: "press" }, function (data, status) {
                });
            });

            $("button.motor-btn").bind(BUTTON_UP, function () {
                $.post("/cmd", { id: "stop", status: "release" }, function (data, status) {
                });
            });

            // Camera toggle button
            $("#toggle-camera").click(function () {
                console.log("Toggle camera clicked");
                console.log("has_camera value: {{ has_camera }}");
                {% if has_camera %}
                console.log("Inside has_camera block, making POST request...");
                $.post("/toggle_camera", function (data) {
                    console.log("Toggle camera response:", data);
                    isCameraStreaming = data.streaming;
                    updateCameraUI();
                }).fail(function (xhr, status, error) {
                    console.error("Toggle camera failed:", status, error);
                    alert("Failed to toggle camera: " + error);
                });
                {% else %}
                console.log("Camera not available");
                alert("Camera hardware not detected");
                {% endif %}
            });

            // Take picture button
            $("#take-picture").bind(BUTTON_DOWN, function () {
                console.log("Take picture clicked");
                $.post("/cmd", { id: "take-picture", status: "press" }, function (data, status) {
                    console.log("Take picture response:", data);
                    if (data.message) {
                        alert(data.message);
                    }
                }).fail(function (xhr, status, error) {
                    console.error("Take picture failed:", status, error);
                    alert("Failed to take picture: " + error);
                });
            });

            function updateCameraUI() {
                if (isCameraStreaming) {
                    $("#video-feed").attr("src", "/video_feed?" + new Date().getTime());
                    $("#video-container").show();
                    $("#toggle-camera").text("Stop Camera");
                    $("#toggle-camera").css("background-color", "#d9534f");
                } else {
                    $("#video-feed").attr("src", "");
                    $("#video-container").hide();
                    $("#toggle-camera").text("Start Camera");
                    $("#toggle-camera").css("background-color", "#5cb85c");
                }
            }

            // Initialize camera state from server
            {% if has_camera %}
            $.get("/camera_status", function (data) {
                isCameraStreaming = data.streaming;
                updateCameraUI();
            });
            {% else %}
            $("#video-container").hide();
            $("#toggle-camera").hide();
            $("#take-picture").hide();
            {% endif %}
        });

    </script>

</head>

<body>
    <main>
        <div class="camera_controls">
            <button id="toggle-camera">Start Camera</button>
            <button class="btn-all btn-small" id="take-picture">Take Picture</button>
        </div>

        <div id="video-container" class="video_out" style="display:none;">
            <img id="video-feed" class="video_body" src="" />
        </div>

        <div class="main_key">
            <div>
                <h2>Motor Control</h2>
                <div class="btn_out">
                    <div>
                        <button class="btn-all motor-btn" id="ic-left-up">
                            <span class="material-icons">north_west</span>
                        </button>
                        <button class="btn-all motor-btn" id="ic-up">
                            <span class="material-icons">north</span>
                        </button>
                        <button class="btn-all motor-btn" id="ic-right-up">
                            <span class="material-icons">north_east</span>
                        </button>
                    </div>
                    <div>
                        <button class="btn-all motor-btn" id="ic-left">
                            <span class="material-icons">west</span>
                        </button>
                        <button class="btn-all motor-btn" id="ic-stop">
                            <span class="material-icons">stop_circle</span>
                        </button>
                        <button class="btn-all motor-btn" id="ic-right">
                            <span class="material-icons">east</span>
                        </button>
                    </div>
                    <div>
                        <button class="btn-all motor-btn" id="ic-left-down">
                            <span class="material-icons">south_west</span>
                        </button>
                        <button class="btn-all motor-btn" id="ic-down">
                            <span class="material-icons">south</span>
                        </button>
                        <button class="btn-all motor-btn" id="ic-right-down">
                            <span class="material-icons">south_east</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </main>

</body>

</html>